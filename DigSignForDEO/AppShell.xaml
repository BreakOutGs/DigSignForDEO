    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DigSignForDEO"
    Shell.FlyoutBehavior="Disabled">

    <TabBar 
        Shell.NavBarIsVisible="False">
        <Tab Title="Додавання сертифікатів" >
            <ShellContent ContentTemplate="{DataTemplate local:CertificateCreatingPage}"/>
